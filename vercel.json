{
  "buildCommand": "prisma generate && prisma migrate deploy && npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install --legacy-peer-deps",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "USE_MOCKS": "false",
    "NEXT_PUBLIC_USE_MOCKS": "false"
  },
  "build": {
    "env": {
      "USE_MOCKS": "false",
      "NEXT_PUBLIC_USE_MOCKS": "false"
    }
  }
}
