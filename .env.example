# TerraVoyage Environment Configuration Template
# Copy this file to .env.local and replace with your actual values
# 
# SETUP INSTRUCTIONS:
# 1. cp .env.example .env.local
# 2. Replace placeholder values with your actual API keys
# 3. Never commit .env.local to version control

# Database (required)
# Get from: Neon, Supabase, Railway, or local PostgreSQL
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# AI Services (required for itinerary generation)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"

# External APIs (required for full functionality)
# Get from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Get from: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN="pk.your-mapbox-public-token"

# Get from: https://openweathermap.org/api
WEATHER_API_KEY="your-weather-api-key"

# Optional - Future Authentication (not currently used)
# NEXTAUTH_SECRET="generate-a-random-secret"
# NEXTAUTH_URL="http://localhost:3000"
# GOOGLE_CLIENT_ID="your-google-oauth-client-id"
# GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Optional - Redis for caching (not currently required)
# REDIS_URL="redis://localhost:6379"

# Mock Configuration - set to true to use mock data instead of real APIs
USE_MOCKS=false
NEXT_PUBLIC_USE_MOCKS=false

# Environment
NODE_ENV=development